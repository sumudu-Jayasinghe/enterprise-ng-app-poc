{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@enterprise-ng-app-poc/client-search": [
        "libs/client-search/src/index.ts"
      ],
      "@enterprise-ng-app-poc/client-setup": [
        "libs/client-setup/src/index.ts"
      ],
      "@enterprise-ng-app-poc/shared/shared-components": [
        "libs/shared/shared-components/src/index.ts"
      ],
      "@enterprise-ng-app-poc/shared/shared-services": [
        "libs/shared/shared-services/src/index.ts"
      ]
    }
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
